<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/guideline_hor"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     app:layout_constraintGuide_begin="196dp" />

  <Button
      android:id="@+id/seven"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="7"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/eight"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/guideline_hor"
      app:layout_constraintBottom_toTopOf="@id/four"/>

  <Button
      android:id="@+id/eight"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="8"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/nine"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/seven"
      app:layout_constraintTop_toBottomOf="@+id/guideline_hor"
      app:layout_constraintBottom_toTopOf="@id/five"/>

  <Button
      android:id="@+id/nine"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="9"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="@id/back"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/eight"
      app:layout_constraintTop_toBottomOf="@+id/guideline_hor"
      app:layout_constraintBottom_toTopOf="@id/six"/>

  <Button
      android:id="@+id/back"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="-"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintBottom_toTopOf="@id/divide"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/nine"
      app:layout_constraintTop_toBottomOf="@+id/guideline_hor" />

  <Button
      android:id="@+id/four"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="4"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/five"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/seven" />

  <Button
      android:id="@+id/five"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="5"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/six"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/four"
      app:layout_constraintTop_toBottomOf="@+id/eight" />

  <Button
      android:id="@+id/six"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="6"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="@id/divide"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/five"
      app:layout_constraintTop_toBottomOf="@+id/nine" />
  <Button
      android:id="@+id/divide"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="/"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/six"
      app:layout_constraintTop_toBottomOf="@+id/back" />

  <Button
      android:id="@+id/one"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="1"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/two"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/four" />

  <Button
      android:id="@+id/two"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="2"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/three"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/one"
      app:layout_constraintTop_toBottomOf="@+id/five" />

  <Button
      android:id="@+id/three"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="3"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="@id/multiply"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/two"
      app:layout_constraintTop_toBottomOf="@+id/six" />
  <Button
      android:id="@+id/multiply"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="*"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/three"
      app:layout_constraintTop_toBottomOf="@+id/divide" />
  <Button
      android:id="@+id/zero"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="0"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/two"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/one" />

  <Button
      android:id="@+id/dot"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text=","
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@+id/three"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/one"
      app:layout_constraintTop_toBottomOf="@+id/two" />

  <Button
      android:id="@+id/equal"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="="
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toStartOf="@id/minus"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/dot"
      app:layout_constraintTop_toBottomOf="@+id/three" />
  <Button
      android:id="@+id/minus"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="-"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/three"
      app:layout_constraintTop_toBottomOf="@+id/multiply" />
  <Button
      android:id="@+id/plus"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:backgroundTint="#f2f3f5"
      android:text="+"
      android:textColor="@color/black"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/three"
      app:layout_constraintTop_toBottomOf="@+id/minus"/>



</androidx.constraintlayout.widget.ConstraintLayout>